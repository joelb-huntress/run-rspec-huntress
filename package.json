{
  "name": "run-rspec",
  "displayName": "Run RSpec",
  "description": "A VS Code Extension to run RSpec or just some RSpec blocks just with a click",
  "version": "0.0.2",
  "publisher": "itssoumit",
  "author": {
    "name": "Soumit Das",
    "email": "me@soumit.in",
    "url": "https://www.linkedin.com/in/itssoumit/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ITSSOUMIT/run-rspec"
  },
  "galleryBanner": {
    "color": "#e9573f",
    "theme": "dark"
  },
  "keywords": [
    "rspec",
    "run rspec",
    "ruby on rails",
    "ruby",
    "rspec testing",
    "unit testing"
  ],
  "icon": "icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/*_spec.rb"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rspec-runner.debugEntireRubySpec",
        "title": "Run Entire Ruby Spec",
        "icon": "$(debug-alt)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .rb && resourceFilename =~ /_spec/",
          "command": "rspec-runner.debugEntireRubySpec",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
